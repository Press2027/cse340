<%- include("../partials/header") %>

<main class="account-view">
  <h1><%= title %></h1>

  <!-- Flash Messages -->
  <% if (notice && notice.length > 0) { %>
    <div class="alert alert-success">
      <% notice.forEach(msg => { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

  <!-- Validation Errors -->
  <% if (errors && !errors.isEmpty()) { %>
    <div class="alert alert-danger">
      <ul>
        <% errors.array().forEach(err => { %>
          <li><%= err.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <!-- Account Update Form -->
  <section class="account-update">
    <h2>Update Account Information</h2>

    <form method="post" action="/account/update" novalidate>
      <input type="hidden" name="account_id" value="<%= account.account_id %>">

      <div class="form-group">
        <label for="account_firstname">First Name</label>
        <input type="text" id="account_firstname" name="account_firstname" required
               value="<%= account.account_firstname || '' %>">
      </div>

      <div class="form-group">
        <label for="account_lastname">Last Name</label>
        <input type="text" id="account_lastname" name="account_lastname" required
               value="<%= account.account_lastname || '' %>">
      </div>

      <div class="form-group">
        <label for="account_email">Email</label>
        <input type="email" id="account_email" name="account_email" required
               value="<%= account.account_email || '' %>">
      </div>

      <button type="submit">Update Account</button>
    </form>
  </section>

  <hr>

  <!-- Change Password Form -->
  <section class="password-update">
    <h2>Change Password</h2>
    <p>
      Enter a new password to replace your current one. Password must be at least 12 characters
      and include uppercase, lowercase, number, and special character.
    </p>

    <form method="post" action="/account/update-password" novalidate>
      <input type="hidden" name="account_id" value="<%= account.account_id %>">

      <div class="form-group">
        <label for="account_password">New Password</label>
        <input type="password" id="account_password" name="account_password" required
               pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9]).{12,}$">
      </div>

      <button type="submit">Change Password</button>
    </form>
  </section>
</main>

<%- include("../partials/footer") %>
